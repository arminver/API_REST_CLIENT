<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>eseo.twic.api_rest_client.servlets.AccueilServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AjouterVille</servlet-name>
        <servlet-class>eseo.twic.api_rest_client.servlets.AjouterVilleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AjouterVille</servlet-name>
        <url-pattern>/ajouterVille</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifierVille</servlet-name>
        <servlet-class>eseo.twic.api_rest_client.servlets.ModifierVilleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ModifierVille</servlet-name>
        <url-pattern>/modifierVille</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SupprimerVille</servlet-name>
        <servlet-class>eseo.twic.api_rest_client.servlets.SupprimerVilleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SupprimerVille</servlet-name>
        <url-pattern>/supprimerVille</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DistanceDeuxVilles</servlet-name>
        <servlet-class>eseo.twic.api_rest_client.servlets.DistanceDeuxVillesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DistanceDeuxVilles</servlet-name>
        <url-pattern>/calculDistance</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

</web-app>